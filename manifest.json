{
  "name": "8pilot",
  "version": "1.7",
  "description": "AI assistant for building n8n workflows",
  "manifest_version": 3,
  "icons": {
    "16": "icons/pixelated_sample_32.png",
    "48": "icons/pixelated_sample_32.png",
    "128": "icons/pixelated_sample_32.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/pixelated_sample_32.png",
      "48": "icons/pixelated_sample_32.png",
      "128": "icons/pixelated_sample_32.png"
    },
    "default_popup": "popup-final.html"
  },


  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "extension.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["frontend/content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/chat-icon-48.png",
        "icons/icon128.png",
        "icons/icon48.png",
        "icons/icon16.png",
        "icons/pixelated_sample_32.png",
        "popup-final.js",
        "frontend/content.js",
        "frontend/components/*.js",
        "frontend/services/*.js",
        "frontend/utils/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}