{
  "name": "8pilot",
  "version": "1.0",
  "description": "AI assistant for building n8n workflows",
  "manifest_version": 3,
  "icons": {
    "16": "icons/pixelated_sample_32.png",
    "48": "icons/pixelated_sample_32.png",
    "128": "icons/pixelated_sample_32.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/pixelated_sample_32.png",
      "48": "icons/pixelated_sample_32.png",
      "128": "icons/pixelated_sample_32.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "extension.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel/sidepanel.js",
        "sidepanel/sidepanel.css",
        "icons/chat-icon-48.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}